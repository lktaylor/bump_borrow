<!-- Validation failure messages -->

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit User #<%= @user.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user/<%= @user.id %>" class="form-horizontal">
      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
          Username
        </label>
        <div class="col-sm-10">
          <input type="text" id="username" name="username" placeholder="Username" class="form-control" value="<%= @user.username %>">
        </div>
      </div>

      <!-- Label and input for created_at -->
      <div class="form-group">
        <label for="created_at" class="col-sm-2 control-label">
          Created at
        </label>
        <div class="col-sm-10">
          <input type="text" id="created_at" name="created_at" placeholder="Created at" class="form-control" value="<%= @user.created_at %>">
        </div>
      </div>

      <!-- Label and input for updated_at -->
      <div class="form-group">
        <label for="updated_at" class="col-sm-2 control-label">
          Updated at
        </label>
        <div class="col-sm-10">
          <input type="text" id="updated_at" name="updated_at" placeholder="Updated at" class="form-control" value="<%= @user.updated_at %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update User" class="btn btn-warning">
          or
          <a href="/users/<%= @user.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

