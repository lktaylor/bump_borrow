<!-- Validation failure messages -->

<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Category</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_category" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for created_at -->
      <div class="form-group">
        <label for="created_at" class="col-sm-2 control-label">
          Created at
        </label>
        <div class="col-sm-10">
          <input type="text" id="created_at" name="created_at" placeholder="Created at" class="form-control" value="<%= @category.created_at %>">
        </div>
      </div>

      <!-- Label and input for updated_at -->
      <div class="form-group">
        <label for="updated_at" class="col-sm-2 control-label">
          Updated at
        </label>
        <div class="col-sm-10">
          <input type="text" id="updated_at" name="updated_at" placeholder="Updated at" class="form-control" value="<%= @category.updated_at %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Category" class="btn btn-success">
          or
          <a href="/categories">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

