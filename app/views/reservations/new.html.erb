<!-- Validation failure messages -->

<% if @reservation.errors.any? %>
  <% @reservation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Simple full-width example-->

<div class="page-header">
  <h1>Add Reservation</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_reservation" class="form-horizontal">
      <!-- Label and input for reserve_start -->
      <div class="form-group">
        <label for="reserve_start" class="col-sm-2 control-label">
          Reserve start
        </label>
        <div class="col-sm-10">
          <input type="text" id="reserve_start" name="reserve_start" placeholder="Reserve start" class="form-control" value="<%= @reservation.reserve_start %>">
        </div>
      </div>

      <!-- Label and input for reserve_end -->
      <div class="form-group">
        <label for="reserve_end" class="col-sm-2 control-label">
          Reserve end
        </label>
        <div class="col-sm-10">
          <input type="text" id="reserve_end" name="reserve_end" placeholder="mm-dd-yyyy" class="form-control" value="<%= @reservation.reserve_end %>">
        </div>
      </div>

      <!-- Label and input for username -->
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">
          Username
        </label>
        <div class="col-sm-10">
          <input type="text" id="username" name="username" placeholder="Username" class="form-control" value="<%= @reservation.username %>">
        </div>
      </div>

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="col-sm-2 control-label">
          Item
        </label>
        <div class="col-sm-10">
          <input type="text" id="item_id" name="item_id" placeholder="Item" class="form-control" value="<%= @reservation.item_id %>">
        </div>
      </div>

      <!-- Label and input for item_name -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">
          Item name
        </label>
        <div class="col-sm-10">
          <input type="text" id="item_name" name="item_name" placeholder="Item name" class="form-control" value="<%= @reservation.item_name %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Reservation" class="btn btn-success">
          or
          <a href="/reservations">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

