<!-- Validation failure messages -->

<% if @reservation.errors.any? %>
  <% @reservation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Reservation #<%= @reservation.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_reservation/<%= @reservation.id %>" class="form-horizontal">
      <!-- Label and input for reserve_start -->
      <div class="form-group">
        <label for="reserve_start" class="col-sm-2 control-label">
          Reserve start
        </label>
        <div class="col-sm-10">
          <input type="text" id="reserve_start" name="reserve_start" placeholder="Reserve start" class="form-control" value="<%= @reservation.reserve_start %>">
        </div>
      </div>

      <!-- Label and input for reserve_end -->
      <div class="form-group">
        <label for="reserve_end" class="col-sm-2 control-label">
          Reserve end
        </label>
        <div class="col-sm-10">
          <input type="text" id="reserve_end" name="reserve_end" placeholder="Reserve end" class="form-control" value="<%= @reservation.reserve_end %>">
        </div>
      </div>

      <!-- Label and input for item_name -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">
          Item name
        </label>
        <div class="col-sm-10">
          <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Reservation" class="btn btn-warning">
          or
          <a href="/reservations/<%= @reservation.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

