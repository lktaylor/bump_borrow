<!-- Simple full-width example-->

<div class="page-header">
  <h1>Item #<%= @item.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @item.name %></dd>

      <dt>Category</dt>
      <dd><%= @item.category_id %></dd>

      <dt>Size</dt>
      <dd><%= @item.size %></dd>

      <dt>Color</dt>
      <dd><%= @item.color %></dd>

      <dt>Price</dt>
      <dd><%= @item.price %></dd>

      <dt>Created at</dt>
      <dd><%= @item.created_at %></dd>

      <dt>Updated at</dt>
      <dd><%= @item.updated_at %></dd>

      <dt>Username</dt>
      <dd><%= @item.username %></dd>

      <dt></dt>
      <dd>
        <div class="btn-group">
          <a href="/items" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_item/<%= @item.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>
      </dd>
    </dl>

  </div>
</div>

<!-- End simple full-width example-->

