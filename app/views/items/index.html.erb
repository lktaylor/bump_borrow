<body>
<div class="jumbotron">
  <div class="container">
    <h1>Welcome to Bump Borrow!</h1>
    <p>The only place for an affordable, rental maternity wardrobe</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Get started by viewing our below collection!</a></p>
  </div>
  </div>
<div class="page-header">
  <h1>
    Items
    <a href="/items/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<!-- Simple table layout example -->
<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Size</th>
          <th>Color</th>
          <th>Price</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.category_id %></td>
            <td><%= item.size %></td>
            <td><%= item.color %></td>
            <td><%= item.price %></td>
            <td>
              <a href="/items/<%= item.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>
            </td>
            <td>
              <a href="/items/<%= item.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
            </td>
            <td>
              <a href="/delete_item/<%= item.id %>" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</body>
<!-- End simple table layout example -->

